#:kivy 1.10.0

ScreenManagement:
    MainScreen:
    OffsetScreen:
    SettingsScreen:
    ListScreen:

#:include screens/main_screen.kv
#:include screens/offset_screen.kv
#:include screens/settings_screen.kv
#:include screens/list_screen.kv

<NoUpdatesPopup>:
    id:pop
    size_hint: .4, .2
    auto_dismiss: True
    title: 'Warning'
    Label:
        text: 'There are no new updates available.'

<UpdatingPopup>:
    id:pop
    size_hint: .4, .2
    auto_dismiss: False
    title: 'UPDATE'
    Label:
        text: 'Update is running app will restart when done!'

<NoConnectionPopup>:
    id:pop
    size_hint: .4, .2
    auto_dismiss: True
    title: 'Internet connection not available'
    Label:
        text: 'Could not update since there is no internet!'